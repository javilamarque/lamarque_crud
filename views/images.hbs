{{>header}}
<div class="container">
    <form class="d-flex" role="search" action="/api/images" method="GET">
    <input class="form-control me-2 mt-5" type="search" placeholder="Search" aria-label="Search" name="q">
    <button class="btn btn-outline-success mt-5" type="submit">Buscar</button>
</form>
    <h1>Im√°genes</h1>
    <div class="container">
    <div class="row">
        {{#each images}}
        <div class="col-md-4 mt-5 mb-5">
            <div class="card">
                <img src="{{this.urls.regular}}" class="card-img-top fixed-size-image mx-auto mt-2"  alt="{{this.alt_description}}">
                <div class="card-body">
                    <h5 class="card-title">Descripcion: {{this.alt_description}}</h5>
                    <p class="card-text">Autor: {{this.user.name}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>


